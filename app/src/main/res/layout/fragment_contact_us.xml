<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FragmentStyle"
    tools:context="com.leon.counter_reading.fragments.ContactUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            android:gravity="center"
            android:padding="@dimen/low_dp"
            android:text="@string/back_up"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/low_dp"
            android:textDirection="rtl">

            <TextView
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/low_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sepehr_shamsaei"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/low_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sepehr_phone"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/low_dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/image_vew_exit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/low_dp"
                android:layout_weight="1"
                android:src="@drawable/img_back"
                tools:ignore="ButtonStyle,ContentDescription" />

            <ImageView
                android:id="@+id/image_view_call"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/low_dp"
                android:layout_weight="1"
                android:src="@drawable/img_call"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>