<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.activities.ContactUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linear_layout_logo"
        android:layout_gravity="center"
        android:layout_margin="@dimen/large_dp"
        android:background="@drawable/border_white_1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_margin="@dimen/medium_dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/version"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/text_view_version"
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_margin="@dimen/medium_dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/update_date"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/text_view_date"
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/dash" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_margin="@dimen/medium_dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/design_by"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/text_view_design"
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/team" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_margin="@dimen/medium_dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/website"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/text_view_site"
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_margin="@dimen/medium_dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/email"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/text_view_email"
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/email_tarnama" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_above="@+id/linear_layout_footer"
        android:layout_gravity="bottom"
        android:background="@drawable/img_logo"
        android:orientation="horizontal" />

    <include layout="@layout/footer" />
</RelativeLayout>