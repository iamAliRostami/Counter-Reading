<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/linear_layout_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_green_4"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/image_view_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="start"
                android:src="@drawable/img_profile"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="@dimen/low_dp"
                android:gravity="end|center_vertical"
                android:padding="@dimen/low_dp"
                android:text="@string/home"
                android:textColor="?android:textColor"
                android:textSize="@dimen/text_size_medium"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_view_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_bar"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>