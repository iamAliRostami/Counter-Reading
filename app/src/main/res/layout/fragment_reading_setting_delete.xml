<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.fragments.ReadingSettingDeleteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/large_dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/image_view_delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/img_delete"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginTop="@dimen/low_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:layout_marginBottom="@dimen/low_dp"
            android:background="@drawable/border_gray_5"
            android:gravity="center"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinner"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                android:gravity="center"
                android:popupBackground="@drawable/border_gray_5"
                android:spinnerMode="dialog"
                tools:listitem="@layout/item_dropdown_menu" />

        </LinearLayout>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginTop="@dimen/medium_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:layout_marginBottom="@dimen/medium_dp"
            android:background="@drawable/border_yellow_3"
            android:text="@string/delete"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</FrameLayout>