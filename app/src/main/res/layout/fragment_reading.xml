<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.fragments.ReadingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/low_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_view_pre_number"
                        style="@style/text_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/small_dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/text_view_serial"
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/low_dp"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/low_dp"
                android:layout_marginBottom="@dimen/low_dp"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/low_dp"
                    android:layout_marginRight="@dimen/low_dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_3"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/pre_date"
                        tools:ignore="NestedWeights" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small_dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/text_view_pre_date"
                        style="@style/text_bold"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/low_dp"
                    android:layout_marginRight="@dimen/low_dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_gray_3"
                    android:orientation="vertical"
                    android:weightSum="5"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/branch_radius" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small_dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/text_view_branch"
                        style="@style/text_bold"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/low_dp"
                    android:layout_marginRight="@dimen/low_dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_gray_3"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/siphon_radius"
                        tools:ignore="NestedWeights" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small_dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/text_view_siphon"
                        style="@style/text_bold"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@string/_0"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/low_dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/medium_dp"
                        android:paddingBottom="@dimen/medium_dp"
                        android:text="@string/ahad_asli" />

                    <TextView
                        android:id="@+id/text_view_ahad_asli"
                        style="@style/text_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/medium_dp"
                        android:paddingBottom="@dimen/medium_dp"
                        android:text="@string/_0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/low_dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/medium_dp"
                        android:paddingBottom="@dimen/medium_dp"
                        android:text="@string/ahad_fari" />

                    <TextView
                        android:id="@+id/text_view_ahad_forosh"
                        style="@style/text_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/medium_dp"
                        android:paddingBottom="@dimen/medium_dp"
                        android:text="@string/_0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/low_dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/medium_dp"
                        android:paddingBottom="@dimen/medium_dp"
                        android:text="@string/ahad_masraf" />

                    <TextView
                        android:id="@+id/text_view_ahad_masraf"
                        style="@style/text_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/medium_dp"
                        android:paddingBottom="@dimen/medium_dp"
                        android:text="@string/_0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_submit"
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/low_dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_yellow_3"
                    android:text="@string/submit"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_large" />

                <EditText
                    android:id="@+id/edit_text_number"
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/low_dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_yellow_white"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="@string/_0"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_large"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/low_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_code"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/low_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_karbari"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/low_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_address"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/image_view_expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:padding="@dimen/low_dp"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/low_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_radif"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/low_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_name"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/low_dp"
                android:layout_marginRight="@dimen/low_dp"
                android:background="@drawable/border_gray_5"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_spinner"
                    android:gravity="center"
                    android:popupBackground="@drawable/border_gray_5"
                    android:spinnerMode="dialog"
                    tools:listitem="@layout/item_dropdown_menu" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>