<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.fragments.SettingChangeThemeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/large_dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/image_view_theme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/img_change_theme"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linear_layout_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/image_view_blue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:src="@drawable/img_blue"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_view_blue"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:gravity="center_vertical"
                android:padding="@dimen/low_dp"
                android:text="@string/blue"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/image_view_green"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:src="@drawable/img_green"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_view_green"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:gravity="center_vertical"
                android:padding="@dimen/low_dp"
                android:text="@string/green"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_light_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/image_view_light_blue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:src="@drawable/img_pale_blue"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_view_light_blue"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:gravity="center_vertical"
                android:padding="@dimen/low_dp"
                android:text="@string/light_blue"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/image_view_black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:src="@drawable/img_black"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_view_black"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:gravity="center_vertical"
                android:padding="@dimen/low_dp"
                android:text="@string/dark"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp">

            <Button
                android:id="@+id/button_change_theme"
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginBottom="@dimen/medium_dp"
                android:background="@drawable/border_yellow_3"
                android:text="@string/change_theme"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>