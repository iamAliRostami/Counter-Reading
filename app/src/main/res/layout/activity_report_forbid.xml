<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.leon.counter_reading.activities.ReportForbidActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/text_view_pre_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/previous_account"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:id="@+id/linear_layout_pre_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_pre_account"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_subscribe"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/edit_text_pre_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="10"
                    android:padding="@dimen/low_dp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_next_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/next_account"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:id="@+id/linear_layout_account_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_next_account"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_subscribe"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/edit_text_next_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="10"
                    android:padding="@dimen/low_dp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>


            <TextView
                android:id="@+id/text_view_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/address"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:id="@+id/linear_layout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_address"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_address"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/edit_text_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="@dimen/low_dp"
                    tools:ignore="Autofill,LabelFor,TextFields" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ahad_number"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:id="@+id/linearLayoutHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:background="@drawable/border_gray_3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_ahad_number"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_home"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/edit_text_ahad_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"
                    android:padding="@dimen/low_dp"
                    tools:ignore="Autofill,LabelFor" />

            </LinearLayout>

            <Button
                android:id="@+id/button_photo"
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginTop="@dimen/low_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:layout_marginBottom="@dimen/low_dp"
                android:background="@drawable/border_yellow_3"
                android:text="@string/attach_image"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginTop="@dimen/low_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:layout_marginBottom="@dimen/low_dp"
                android:background="@drawable/border_green_3"
                android:text="@string/submit"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>