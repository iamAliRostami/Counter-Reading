<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.SerialFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_white_3"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_dp"
            android:background="?attr/colorAccent" />

        <EditText
            android:layout_margin="@dimen/low_dp"
            android:id="@+id/edit_text_serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_dp"
            android:layout_marginRight="@dimen/medium_dp"
            android:background="@drawable/border_gray_2"
            android:gravity="center"
            android:hint="@string/counter_body_number"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="@dimen/medium_dp"
            android:textSize="@dimen/text_size_large"
            tools:ignore="Autofill" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/button_submit"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/low_dp"
                android:layout_weight="1"
                android:background="@drawable/border_green_1"
                android:padding="@dimen/low_dp"
                android:text="@string/submit"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_close"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/low_dp"
                android:layout_weight="1"
                android:background="@drawable/border_red_1"
                android:padding="@dimen/low_dp"
                android:text="@string/close"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>