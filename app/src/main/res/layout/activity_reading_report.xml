<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.activities.ReadingReportActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listViewReports"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_submit"
        android:dividerHeight="@dimen/low_dp"
        tools:listitem="@layout/item_public" />

    <Button
        android:id="@+id/button_submit"
        style="@style/text_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/large_dp"
        android:layout_marginTop="@dimen/low_dp"
        android:layout_marginRight="@dimen/large_dp"
        android:layout_marginBottom="@dimen/low_dp"
        android:background="@drawable/border_green_3"
        android:text="@string/submit"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_large" />
</RelativeLayout>