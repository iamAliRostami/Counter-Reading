<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.activities.LocationActivity">


    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/low_dp" />

    <CheckBox
        android:id="@+id/check_box_point"
        style="@style/CheckBox.Possible"
        android:layout_width="wrap_content"
        android:text="@string/set_point"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/check_box_show_point"
        style="@style/CheckBox.Possible"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/check_box_point"
        android:text="@string/show_points" />
</RelativeLayout>