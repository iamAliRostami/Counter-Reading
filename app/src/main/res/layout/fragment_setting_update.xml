<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.counter_reading.fragments.SettingUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/large_dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/image_view_update"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:layout_weight="1"
            android:src="@drawable/img_update"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:layout_weight="1"
                android:padding="@dimen/low_dp"
                android:text="@string/update_date"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/textViewDate"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:layout_weight="1"
                android:padding="@dimen/low_dp"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:layout_weight="1"
                android:padding="@dimen/low_dp"
                android:text="@string/version"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/textViewVersion"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:layout_weight="1"
                android:padding="@dimen/low_dp"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:layout_weight="1"
                android:padding="@dimen/low_dp"
                android:text="@string/apk_size"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/textViewSize"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:layout_weight="1"
                android:padding="@dimen/low_dp"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:layout_weight="1"
                android:padding="@dimen/low_dp"
                android:text="@string/new_possibilities"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/textViewPossibility"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/medium_dp"
                android:layout_weight="1"
                android:padding="@dimen/low_dp"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonReceive"
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_dp"
                android:layout_marginTop="@dimen/medium_dp"
                android:layout_marginRight="@dimen/large_dp"
                android:layout_marginBottom="@dimen/medium_dp"
                android:background="@drawable/border_yellow_3"
                android:text="@string/receive_file"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>