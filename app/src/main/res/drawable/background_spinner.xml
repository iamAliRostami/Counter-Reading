<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/milky" />
            <corners android:radius="@dimen/large_dp" />
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:right="8dp">
        <layer-list>
            <item
                android:width="12dp"
                android:height="12dp"
                android:bottom="10dp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/smoked" />
                        <stroke
                            android:width="1dp"
                            android:color="@color/smoked" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="@dimen/large_dp"
                android:height="@dimen/medium_dp"
                android:bottom="21dp"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/milky" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>