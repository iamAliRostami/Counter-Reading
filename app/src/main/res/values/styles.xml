<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorSecondary">@color/text_color_light</item>
        <item name="fontFamily">@font/font_1</item>
        <item name="font">@font/font_1</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:windowBackground">@drawable/img_background</item>
        <item name="background">@color/milky</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:itemBackground">?colorPrimaryDark</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.GreenBlue">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textColorSecondary">@color/text_color_dark</item>
        <item name="background">@color/smoked</item>
        <item name="android:windowBackground">@drawable/img_background_dark</item>
        <item name="colorPrimary">@color/forrest</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="AppTheme.GreenBlue.NoActionBar">
        <item name="android:itemBackground">?colorPrimaryDark</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DarkGrey">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/smoked</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textColorSecondary">@color/text_color_dark</item>
        <item name="background">@color/smoked</item>
        <item name="android:windowBackground">@drawable/img_background_dark</item>
    </style>

    <style name="AppTheme.DarkGrey.NoActionBar">
        <item name="android:itemBackground">?colorPrimaryDark</item>
